using
(
    class(name, age)
    (
        info:printer -> ["Name : ", name, ", age : ", age].map(printer)
    ),

    class(name) info:p -> ["Name : ", name].map(p),

    class() info:printer -> printer("Just Harry"),

    class info:printer -> printer("Just Peter"),

    (name, age, salary) -> info:reader -> ["Name : ", name, " Age : ", age, ", Worth : ", age * salary ].map(reader)
)

